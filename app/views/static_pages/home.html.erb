<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="product_form">
        <%= render 'shared/product_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Product Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center">
  <h1>Remind My Makeup</h1>

  <h2>
    "REMIND MY MAKEUP" is an app created for all the beauty addicts who can't remember when they opened their products. When you open a new product, create a new card in "REMIND MY MAKEUP", and put its expiration date. When your product will be no more good to use, "REMIND MY MAKEUP" will remind you it.
  </h2>
      
      <%= link_to(signup_path) do %>
      <span id="round">
        <%= image_tag("pen.png", :alt => "sign-up logo", id: "round-logo") %>Sign up now !
      </span>
      <% end %>

      <%= link_to(login_path) do %>
      <span id="round">
        <%= image_tag("login.png", :alt => "sign-up logo", id: "round-logo") %>Login
      </span>
      <% end %>

      <%= link_to(about_path) do %>
      <span id="round">
        <%= image_tag("info.png", :alt => "sign-up logo", id: "round-logo") %>About
      </span>
      <% end %>

</div>

<% end %>